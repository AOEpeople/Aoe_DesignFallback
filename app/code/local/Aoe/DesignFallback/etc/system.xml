<?xml version="1.0"?>
<config>
    <sections>
        <design>
            <groups>
                <fallback translate="label">
                    <label>Fallback</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fallback translate="label">
                            <label>Fallback configuration</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment><![CDATA[
<b>Instructions</b><br />
Insert one line per fallback level.<br />
Separate package name from theme name by a ":".<br />
Use {path/to/configoption} for variables that will be replaced by their configured value.<br />
First line has highest priority.<br />
<b>Magento's default behaviour is reflected by:</b><br />
{design/package/name}:{design/theme/default}<br />
{design/package/name}:default<br />
base:default]]></comment>
                        </fallback>
                    </fields>
                </fallback>
            </groups>
        </design>
	</sections>
</config>
